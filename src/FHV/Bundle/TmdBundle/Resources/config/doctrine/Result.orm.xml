<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="FHV\Bundle\TmdBundle\Entity\Result" table="results">
        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
        </id>

        <field name="transportType" type="integer" nullable="false"/>
        <field name="correctedByUser" type="boolean" nullable="false"/>
        <field name="calcPrecision" type="float" nullable="true"/>
        <field name="analyseType" type="string" nullable="true"/>

        <one-to-one field="segment" target-entity="FHV\Bundle\TmdBundle\Entity\Tracksegment" inversed-by="result">
            <join-column name="idSegment" referenced-column-name="id" on-delete="CASCADE"/>
        </one-to-one>

    </entity>
</doctrine-mapping>
